<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayEd"
    android:padding="20dp"
    tools:context=".ui.chooser.DestinationChooserActivity">

    <EditText
        android:id="@+id/edSearch"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="15dp"
        android:hint="@string/str_try_departure"
        android:inputType="text"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="12dp"
        android:textColor="@color/primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="@color/label"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvNearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edSearch"
        android:layout_marginTop="24dp"
        android:layout_marginStart="5dp"
        android:text="Nearby"
        android:textColor="@color/text"
        android:textSize="14dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNearby"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        tools:listitem="@layout/item_destination_search" />

</RelativeLayout>